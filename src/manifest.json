{
  "name": "Omni Launcher",
  "description": "Quick launcher for Chrome - manage tabs, bookmarks, your browser history",
  "offline_enabled": true,
  "version": "1.0.4",
  "manifest_version": 3,
  "action": {
    "icons": {
      "16": "assets/omni-logo-orange-16.png",
      "48": "assets/omni-logo-orange-48.png",
      "128": "assets/omni-logo-orange-128.png"
    }
  },
  "icons": {
    "16": "assets/omni-logo-orange-16.png",
    "48": "assets/omni-logo-orange-48.png",
    "128": "assets/omni-logo-orange-128.png"
  },
  "commands": {
    "open-omni": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Open command menu"
    }
  },
  "background": {
    "service_worker": "background.mjs",
    "type": "module"
  },
  "options_page": "./options/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["content_loader.js"],
      "css": ["content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*", "*.css", "*.*js"],
      "matches": ["<all_urls>"]
    }
  ],
  "optional_permissions": ["browsingData", "topSites"],
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "bookmarks",
    "history",
    "scripting"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://gstatic.com/*",
    "*://*/*"
  ]
}
